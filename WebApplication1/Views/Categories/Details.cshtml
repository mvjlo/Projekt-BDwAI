@model WebApplication1.Models.Category

@{
    ViewData["Title"] = "Szczegóły kategorii";
}

<h1>Szczegóły kategorii</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    @if (Model.Plugins.Any())
    {
        <h3 class="mt-4">Wtyczki w tej kategorii</h3>
        <ul class="list-group">
            @foreach (var plugin in Model.Plugins)
            {
                <li class="list-group-item">
                    <a asp-controller="Plugins" asp-action="Details" asp-route-id="@plugin.Id">@plugin.Name</a>
                </li>
            }
        </ul>
    }
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
