@model WebApplication1.Models.Plugin

@{
    ViewData["Title"] = "Usuń wtyczkę";
}

<h1>Usuń wtyczkę</h1>

<h3>Czy na pewno chcesz usunąć tę wtyczkę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Producent</dt>
        <dd class="col-sm-10">@Model.Manufacturer?.Name</dd>

        <dt class="col-sm-2">Kategoria</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Wersja</dt>
        <dd class="col-sm-10">@Model.Version</dd>

        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
