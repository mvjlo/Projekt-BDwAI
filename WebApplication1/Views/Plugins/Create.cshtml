@model WebApplication1.Models.Plugin

@{
    ViewData["Title"] = "Dodaj wtyczkę";
}

<h1>Dodaj wtyczkę</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Version" class="control-label"></label>
                        <select asp-for="Version" class="form-select">
                            <option value="VST2">VST2</option>
                            <option value="VST3" selected>VST3</option>
                            <option value="AU">AU</option>
                            <option value="AAX">AAX</option>
                        </select>
                        <span asp-validation-for="Version" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ManufacturerId" class="control-label"></label>
                        <select asp-for="ManufacturerId" class="form-select" asp-items="ViewBag.ManufacturerId">
                            <option value="">-- Wybierz producenta --</option>
                        </select>
                        <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                            <option value="">-- Wybierz kategorię --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SystemRequirements" class="control-label"></label>
                <textarea asp-for="SystemRequirements" class="form-control" rows="3"></textarea>
                <span asp-validation-for="SystemRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
